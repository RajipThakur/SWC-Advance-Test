Code:
#include <bits/stdc++.h>
using namespace std;

int n, k;
vector<int> dx = {0, 0, -1, 1}, dy = {-1, 1, 0, 0};
void solve()
{
    cin >> n >> k;
    vector<pair<int, int>> rare;

    for (int i = 0; i < k; i++)
    {
        int x, y;
        cin >> x >> y;
        x--, y--;
        rare.push_back({x, y});
    }

    int a[n][n];
    for (int i = 0; i < n; i++)
    {
        for (int j = 0; j < n; j++)
        {
            cin >> a[i][j];
        }
    }

    int dist[k][n][n];
    memset(dist, -1, sizeof(dist));

    for (int i = 0; i < k; i++)
    {

        queue<pair<int, int>> q;
        q.push({rare[i]});

        dist[i][rare[i].first][rare[i].second] = 0;

        while (!q.empty())
        {
            auto f = q.front();
            q.pop();

            for (int j = 0; j < 4; j++)
            {
                int x = f.first + dx[j];
                int y = f.second + dy[j];

                if (x >= 0 && x < n && y >= 0 && y < n && dist[i][x][y] == -1 && a[x][y] == 1)
                {
                    dist[i][x][y] = 1 + dist[i][f.first][f.second];
                    q.push({x, y});
                }
            }
        }
    }

    int ans = 1e9;

    for (int i = 0; i < n; i++)
    {
        for (int j = 0; j < n; j++)
        {
            if (a[i][j] == 0)
                continue;
            int mx = 0;
            for (int l = 0; l < k; l++)
            {
                mx = max(mx, dist[l][i][j]);
            }
            ans = min(ans, mx);
        }
    }

    cout << ans << "\n";
}

int main()
{
    int t;
    cin >> t;
    while (t--)
    {
        solve();
    }
    return 0;
}
